{
    "name": "tea-trader",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@reduxjs/toolkit": "^1.9.5",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.5.2",
        "@types/lodash": "^4.14.196",
        "@types/node": "^17.0.45",
        "@types/react": "^18.2.16",
        "@types/react-dom": "^18.2.7",
        "classnames": "^2.3.2",
        "lodash": "^4.17.21",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.1.1",
        "react-scripts": "5.0.1",
        "seedrandom": "^3.0.5",
        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "format": "npx prettier --write ."
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "plugins": [
            "react",
            "simple-import-sort"
        ],
        "rules": {
            "simple-import-sort/imports": "error",
            "simple-import-sort/exports": "error"
        },
        "overrides": [
            {
                "files": [
                    "*.js",
                    "*.jsx",
                    "*.ts",
                    "*.tsx"
                ],
                "rules": {
                    "simple-import-sort/imports": [
                        "error",
                        {
                            "groups": [
                                [
                                    "^react",
                                    "^@?\\w"
                                ],
                                [
                                    "^(@|components)(/.*|$)"
                                ],
                                [
                                    "^\\u0000"
                                ],
                                [
                                    "^\\.\\.(?!/?$)",
                                    "^\\.\\./?$"
                                ],
                                [
                                    "^\\./(?=.*/)(?!/?$)",
                                    "^\\.(?!/?$)",
                                    "^\\./?$"
                                ],
                                [
                                    "^.+\\.?(css)$"
                                ]
                            ]
                        }
                    ]
                }
            }
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "tabWidth": 4
    },
    "devDependencies": {
        "@types/seedrandom": "^3.0.5",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^3.0.0"
    }
}
